<%= form_with model: @task, local: true do |f| %>
  <p>
    <%= f.label :task_name %><br>
    <%= f.text_field :task_name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :priority %><br>
    <%= f.number_field :priority %>
  </p>

  <p>
    <%= f.label :status %><br>
    <%= f.number_field :status %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
